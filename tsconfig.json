{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": false,
    "importHelpers": true,
    "outDir": "./build",
    "baseUrl": "./",
    "declaration": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": false,
    "newLine": "lf",
    "lib": [
      "es2017",
      "esnext"
    ],
    "types": [
      "node"
    ],
    "paths": {
      "app/*": [
        "./src/*"
      ]
    }
  },
  "resolveJsonModule": true,
  "exclude": [
    "node_modules"
  ]
}